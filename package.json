{
  "name": "whatsapp-roll-bot",
  "version": "1.0.0",
  "main": "dist/index.js",
  "scripts": {
    "compile": "tsc -p tsconfig.json",
    "build": "npm run compile",
    "run": "npm run build && node dist/bot.js",
    "start": "npm run run",
    "start:pair": "npm run build && node dist/bot.js --use-pairing-code",
    "start:qr": "npm run build && node dist/bot.js --qr-only",
    "attach": "npm run build && node dist/bot.js --attach",
    "console": "npm run build && node dist/bot.js",
    "logs": "node scripts/tail-logs.js",
    "docker-run": "docker run --rm -it -v $(pwd)/data:/app/data -v $(pwd)/auth:/app/auth -v $(pwd)/sessions:/app/sessions -v $(pwd)/logs:/app/logs whatsapp-roll-bot:latest node dist/bot.js",
    "test": "jest --runInBand",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "lint": "eslint --ext .ts src tests",
    "format": "prettier --write \"**/*.{ts,js,json,md}\""
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "description": "WhatsApp dice roll bot",
  "dependencies": {
    "@cacheable/node-cache": "^1.7.5",
    "@hapi/boom": "^10.0.1",
    "@whiskeysockets/baileys": "^6.7.21",
    "long": "^5.3.2",
    "pino": "^10.1.0",
    "qrcode-terminal": "^0.12.0",
    "ts-qrcode-terminal": "^1.0.1",
    "winston": "^3.18.3",
    "winston-daily-rotate-file": "^5.0.0",
    "undici": "^6.2.0",
    "abort-controller": "^3.0.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.1",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.10.1",
    "@typescript-eslint/eslint-plugin": "8.46.4",
    "@typescript-eslint/parser": "8.46.4",
    "eslint": "9.39.1",
    "eslint-config-prettier": "10.1.8",
    "jest": "30.2.0",
    "prettier": "3.6.2",
    "ts-jest": "29.4.5",
    "typescript": "5.9.3"
  }
}
